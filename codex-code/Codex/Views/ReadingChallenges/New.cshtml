@model Codex.Models.ReadingChallenge

<h2>Join the Reading Challenge!</h2>

<p> Hi, @ViewBag.UserName! Set up your reading challenge for this year! </p>


@Html.ValidationSummary(true, "", new { @class = "text-danger" })


<form method="post" action="/readingchallenges/new">
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="StartDate" />
    <input type="hidden" asp-for ="EndDate" />

    <div class="form-group">
        <label asp-for="TargetNumber">How many books do you want to read this year?</label>
        <input asp-for="TargetNumber" type="text" class="form-control" placeholder="Enter the number of books you want to read this year" />
        @Html.ValidationMessageFor(m => m.TargetNumber, "The target number of books is required!", new { @class = "text-danger" })
    </div>
    <br />

    <button type="submit" class="btn btn-outline-secondary"> Join the challenge!</button>
</form>
