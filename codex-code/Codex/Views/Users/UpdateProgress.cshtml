@model Codex.Models.BookOnShelf

<h2>Update your progress on @Model.Book.Title!</h2>


@Html.ValidationSummary(true, "", new { @class = "text-danger" })


@if (Model.CurrentPage == null)
    Model.CurrentPage = 0; 

<form method="post">
    <input type="hidden" asp-for="ShelfId" />
    <input type="hidden" asp-for="BookId" />

    <div class="form-group">
        <label for="currentPage">Current Page:</label>
        <input type="number" class="form-control" name="currentPage" value="@Model.CurrentPage">
         @Html.ValidationMessageFor(bos => bos.CurrentPage , null, new { @class = "text-danger" })
    </div>

    <br/>
    <button type="submit" class="btn btn-outline-secondary">Update Progress</button>
</form>
