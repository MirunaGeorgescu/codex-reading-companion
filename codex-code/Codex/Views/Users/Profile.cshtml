@model Codex.Models.ApplicationUser


@if (TempData.ContainsKey("message"))
{
    <div class="alert alert-info" role="alert">
        @TempData["message"]
    </div>
}

<div class="card">
    <div class="row no-gutters">
        @*display profile picture + reading challenge*@
        <div class="col-md-4">
            <div class="d-flex flex-column align-items-center">
                <img src="@Model.ProfilePhoto" class="card-img mb-2" style="width: 150px; height: 150px;" alt="Profile Picture">
                <br/>

                @if (!Model.HasJoinedChallenge(new ReadingChallenge { StartDate = new DateOnly(DateTime.Now.Year, 1, 1), UserId = Model.Id }))
                {
                    <a href="@Url.Action("New", "ReadingChallenges", new { userId = Model.Id })" class="btn btn-outline-secondary">Join Reading Challenge</a>
                }
                else
                {
                    @if (ViewBag.ChallengeProgress != null)
                    {
                        <div class="card">
                            <div class="card-header">
                                <a href="@Url.Action("Show", "ReadingChallenges", new { id = ViewBag.ChallangeId })" style="text-decoration: none; color: inherit;">
                                    <h5 class="card-title">@ViewBag.Year Reading Challange Reading Challenge</h5>
                                </a>
                            </div>
                            <div class="card-body">
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" style="width: @(ViewBag.ChallengeProgress)%;" aria-valuenow="@ViewBag.ChallengeProgress" aria-valuemin="0" aria-valuemax="100">
                                        @(ViewBag.ChallengeProgress)% 
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        @*display info*@
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">Email: @Model.Email</p>

                @*display shelves*@
                @if(Model.Shelves != null)
                {
                    <h5>@Model.Name's Shelves</h5>
                    
                    <div class="row">
                        @foreach(var shelf in Model.Shelves)
                        {
                            <div class="col-md-4 mb-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">@shelf.Name</h5>
                                        <a href="@Url.Action("Show", "Shelves", new {shelfId = shelf.ShelfId})" class="btn btn-outline-secondary">Show books</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    @*if the user has set any favorite books then we display them*@
                    @if (Model.FavoriteBooks != null)
                    {
                        <h5>@Model.Name's Favorite Books</h5>

                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-md-8">
                                    @*display books in carousel*@
                                    <div id="favoriteBooksCarousel" class="carousel slide" data-ride="carousel" style="max-width: 230px; height: auto;">

                                        @*display the book cover on the slide and the title and author in the caption*@
                                        <div class="carousel-inner">
                                            @foreach (var favoriteBook in Model.FavoriteBooks)
                                            {
                                                @*first item is set to active (it should be displaied initially)*@
                                                @if (favoriteBook.BookId == Model.FavoriteBooks.First().BookId)
                                                {
                                                    <div class="carousel-item active">
                                                        <img src="@favoriteBook.CoverImage" class="d-block w-100" alt="@favoriteBook.Title cover image" />
                                                        <div class="carousel-caption dd-none d-md-block">
                                                            <h5>@favoriteBook.Title</h5>
                                                            <p>by @favoriteBook.Author</p>
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="carousel-item">
                                                        <img src="@favoriteBook.CoverImage" class="d-block w-100" alt="@favoriteBook.Title cover image" />
                                                        <div class="carousel-caption dd-none d-md-block">
                                                            <h5>@favoriteBook.Title</h5>
                                                            <p>by @favoriteBook.Author</p>
                                                        </div>
                                                    </div>
                                                }
                                            }
                                        </div>

                                        @*display arrows for navigation*@
                                        <a class="carousel-control-prev" href="#favoriteBooksCarousel" role="button" data-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                           @*  <span class="sr-only">Previous</span> *@
                                        </a>
                                        <a class="carousel-control-next" href="#favoriteBooksCarousel" role="button" data-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            @* <span class="sr-only">Next</span> *@
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                }

                <br />

                @*if the user has badges then we display them*@
                @if(Model.BadgesEarned != null)
                {
                    <h5>@Model.Name's Badges</h5>

                    <div class=" row">
                        @foreach(var badge in Model.Badges)
                        {
                            @*3 per row*@
                            <div class="col-md-4 mb-4">
                                <div class="card">
                                    <img src="@badge.Image" class="card-img-top" alt="@badge.Name image" />

                                    <div class="card-body">
                                        <h6 class="card-title">@badge.Name</h6>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }

            </div>
        </div>
    </div>

    <div class="card-footer">
        <div class="row">
            <div class="col">
                <a href="@Url.Action("Edit", "Users", new { id = Model.Id })" class="btn btn-outline-secondary">Edit Profile</a>
            </div>
            <div class="col">
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                </form>
            </div>
        </div>
       
    </div>
</div>

<script>
    // when the prevoius arrow is clicked go to the previous slide of the favoriteBooksCarousel
    $('.carousel-control-prev').click(function (element) {
        // default behavior is to go to a url, prevent it 
        element.preventDefault();

        // get carousel, go to previous slide
        $('#favoriteBooksCarousel').carousel('prev');
    });

    //when the next arrow is clicked go to the next slide  of the favoriteBooksCarousel
    $('.carousel-control-next').click(function (element) {
        // default behavior is to go to a url, prevent it
        element.preventDefault();

        // get carousel, go to next slide 
        $('#favoriteBooksCarousel').carousel('next');
    });
</script>