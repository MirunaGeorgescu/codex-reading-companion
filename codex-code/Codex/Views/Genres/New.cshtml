@model Codex.Models.Genre

<h2>Add a new genre to the Codex databse!</h2>

<form method="post" action="/genres/new">
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Enter the name of the genre" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />

    <button type="submit" class="btn btn-light">Add genre!</button>
</form> 