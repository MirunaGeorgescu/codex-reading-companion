@model Codex.Models.Shelf

<h1>The books on your @Model.Name shelf!</h1>

@*check to see if there are books on the shelf*@
@if(Model.BooksOnShelves.Any())
{
    <div class="row">
        @*display the books in cards, three on a row*@
        @foreach (var bookOnShelf in Model.BooksOnShelves)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@bookOnShelf.Book.CoverImage" class="cardcard-img-top" alt="@bookOnShelf.Book.Title Cover Image" style="max-width: 100%; height: 600px; object-fit: cover;" />
                    <div class="card-body">
                        <h4 class="card-title">@bookOnShelf.Book.Title</h4>
                        <h5 class="card-subtitle mb-2 text-muted">by @bookOnShelf.Book.Author</h5>
                        <p class="card-text">Rating: @bookOnShelf.Book.Rating</p>

                        @*update progress for user's currently reading shelf*@
                        @if (bookOnShelf.Shelf.Name == "Currently reading" && ViewBag.CurrentUser.Id == bookOnShelf.Shelf.UserId)
                        {

                            <div class="d-flex justify-content-between">
                                <a class="btn btn-outline-secondary" href="@Url.Action("Show", "Books", new { id = bookOnShelf.Book.BookId })">Show details</a>
                                <a class="btn btn-outline-secondary" href="@Url.Action("UpdateProgress", "Users", new { userId = ViewBag.CurrentUser.Id, bookId = bookOnShelf.BookId })">Update Progress</a>
                            </div>


                            @if(bookOnShelf.CurrentPage == null)
                                bookOnShelf.CurrentPage = 0; 

                            <div class="progress mt-3">
                                <div class="progress-bar" role="progressbar" style="width: @(bookOnShelf.CurrentPage * 100 / bookOnShelf.Book.NumberOfPages)%" aria-valuenow="@bookOnShelf.CurrentPage" aria-valuemin="0" aria-valuemax="@bookOnShelf.Book.NumberOfPages">
                                </div>
                            </div>
                        }
                        else
                        {
                            <a class="btn btn-outline-secondary" href="@Url.Action("Show", "Books", new { id = bookOnShelf.Book.BookId })">Show details</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>There are no books on this shelf :(</p>
}