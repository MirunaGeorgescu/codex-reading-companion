@model Codex.Models.Book

<h2>Add a new book to the Codex database!</h2>

<form method="post" action="/books/new">
    <div class="form-group">
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" type="text" class="form-control" placeholder="Enter the title"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <br/>

    <div class="form-group">
        <label asp-for="Author">Author:</label>
        <input asp-for="Author" type="text" class="form-control" placeholder="Author's name" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>
    <br />

    <label>Genre:</label>
    @Html.DropDownListFor(m => m.GenreId, new SelectList(Model.GenreOptions, "Value", "Text"),
            "SelectGenre", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Genre, null, new { @class = "text-danger" })
    <br />

    <div class="form-group">
        <label asp-for="Synopsis">Synopsis:</label>
        <textarea asp-for="Synopsis" class="form-control" rows="3" placeholder="Enter synopsis"></textarea>
        <span asp-validation-for="Synopsis" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        <label asp-for="PublicationDate">Publication Date:</label>
        <input asp-for ="PublicationDate" type="date" class="form-control"/>
        <span asp-validation-for="PublicationDate" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        <label asp-for="CoverImage">Cover Image:</label>
        <input asp-for="CoverImage" type="text" class="form-control" placeholder="Enter the link to the cover image" />
        <span asp-validation-for="CoverImage" class="text-danger"></span>
    </div>
    <br />

    <button type="submit" class="btn btn-light">Add book!</button>
</form>
