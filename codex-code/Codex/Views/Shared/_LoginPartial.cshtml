@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    // getting the user so we can display the name and profile picture
    var user = await UserManager.GetUserAsync(User);

    <div class="row">
        <div class="col-auto">
        <li class="nav-item">
            <div class="d-flex align-items-center">
                <div class="p-1">
                    <a href="@Url.Action("Profile", "Users", new{id = user.Id})" class="nav-link">
                        <img src="@user.ProfilePhoto" class="rounded-circle" style="width: auto; height: 40px; max-width: 40px; max-height: 40px;" alt="Profile Picture" />
                    </a>
                </div>
                <div class="p-1" style="text-align: center;">
                    <a href="Users/Profile/@user.Id" class="nav-link" style="color:inherit; text-decoration: none;">
                        Hello, @user.Name!
                    </a>
                </div>
            </div>
        </li>
        </div>
        <div class="col-auto d-flex align-items-center">
        <li class="nav-item">
            <div  style="text-align: center; ">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </div>
        </li>
        </div>
    </div>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
